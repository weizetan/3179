{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 370,
    "height": 200,
    "title":{"text" : "Last 5 Happiest Countries", "fontSize" : 15, "dy":-20 ,"font": "Inria Sans, sans-serif"},
    "data": {"url": "https://raw.githubusercontent.com/weizetan/3179/main/a2/data/WHR_cleaned.csv"},
    "transform": [
      {
        "window": [{"op": "rank", "as": "rank"}],
        "sort": [{"field": "Happiness score", "order": "ascending"}]
      },
      {
        "calculate": "datum.rank",
        "as": "reverse_rank"
      },
      {
        "filter": "datum.reverse_rank <= 5" 
      }
    ],
    "encoding": {
      "y": {"field": "Country", "type": "nominal", "sort": ["Botswana", "Rwanda", "Zimbabwe", "Lebanon", "Afghanistan"]},
      "x": {"field": "Happiness score", "type": "quantitative", "scale": {"domain": [0, 8], "range": [0, 350]}},
      "tooltip":[
        {"field": "Country","type": "nominal", "title": "Country"},
        {"field":"Rank","type": "ordinal", "title": "Rank"},
        {"field": "Happiness score","type": "quantitative", "title": "Happiness Score"}]
    },
    "layer": [
      {
        "mark": {
          "type": "bar",
          "color": "#FFF18d",
          "cornerRadius": 45,
          "cornerRadiusEnd": 45
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "left",
          "baseline": "middle",
          "dx": 5,
          "color": "#444444"
        },
        "encoding": {
          "text": {"field": "Happiness score", "type": "quantitative"}
        }
      }
    ],
    "config": {
      "view": {"stroke": null},
      "axis": {
        "titleFont": "Inria Sans, sans-serif",
        "labelFont": "Inria Sans, sans-serif" 
      },
      "legend": {
        "titleFont": "Inria Sans, sans-serif",
        "labelFont": "Inria Sans, sans-serif" 
      }
    }
  }
  
  